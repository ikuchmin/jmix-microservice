<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="adm">
        <createTable tableName="ADM_DEPARTMENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ADM_DEPARTMENT"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="adm">
        <createTable tableName="ADM_EMPLOYEE">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ADM_EMPLOYEE"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="AGE" type="INT"/>
            <column name="DEPARTMENT_ID" type="BIGINT"/>
            <column name="ORGANIZATION_ID" type="BIGINT"/>
            <column name="POSITION_" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="adm">
        <createTable tableName="ADM_ORGANIZATION">
            <column name="ID" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ADM_ORGANIZATION"/>
            </column>
            <column name="UUID" type="UUID"/>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="ADDRESS" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>